    <script>

function show(){
          document.addEventListener("DOMContentLoaded", function() {
            const TestData = JSON.parse(localStorage.getItem("testi"));
        
            if (TestData) {
                const sermonContainer = document.querySelector(".d-testi"); // The parent div where we'll insert the sermon
        
                const sermonDiv = document.createElement("div");
                sermonDiv.classList.add("testi-card");
        
                sermonDiv.innerHTML = `
                
                        <p class="name">${TestData.pname}</p>
                        <p class="title">${TestData.ttitle}</p>
                        <p class="small">${TestData.tinfo}</p>
                       <a href="" class="see">See More</a>
                `;
                console.log(TestData)
        
                sermonContainer.appendChild(TestData);
            } else {
                console.log("No sermon data found!");
            }
        });
        
        
}

show()
  
